# =============================================================================
# EditorConfig - Consistent coding styles across editors/IDEs
# =============================================================================
# https://editorconfig.org
#
# Supported by: VS Code, PyCharm, Sublime, Atom, Vim, and many others.
# =============================================================================

root = true

# -----------------------------------------------------------------------------
# Default settings for all files
# -----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# -----------------------------------------------------------------------------
# Python files (Odoo standard: 4 spaces)
# -----------------------------------------------------------------------------
[*.py]
indent_size = 4
max_line_length = 88

# -----------------------------------------------------------------------------
# XML files (Odoo views, data, security)
# -----------------------------------------------------------------------------
[*.xml]
indent_size = 4

# -----------------------------------------------------------------------------
# YAML files (Docker, CI/CD, pre-commit)
# -----------------------------------------------------------------------------
[*.{yml,yaml}]
indent_size = 2

# -----------------------------------------------------------------------------
# JSON files
# -----------------------------------------------------------------------------
[*.json]
indent_size = 2

# -----------------------------------------------------------------------------
# JavaScript/TypeScript (OWL components)
# -----------------------------------------------------------------------------
[*.{js,ts,jsx,tsx}]
indent_size = 4

# -----------------------------------------------------------------------------
# CSS/SCSS
# -----------------------------------------------------------------------------
[*.{css,scss,sass,less}]
indent_size = 4

# -----------------------------------------------------------------------------
# HTML/QWeb templates
# -----------------------------------------------------------------------------
[*.html]
indent_size = 4

# -----------------------------------------------------------------------------
# Markdown documentation
# -----------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# -----------------------------------------------------------------------------
# reStructuredText (Sphinx docs)
# -----------------------------------------------------------------------------
[*.rst]
indent_size = 3

# -----------------------------------------------------------------------------
# CSV files (Odoo security rules)
# -----------------------------------------------------------------------------
[*.csv]
trim_trailing_whitespace = false
insert_final_newline = false

# -----------------------------------------------------------------------------
# PO/POT translation files
# -----------------------------------------------------------------------------
[*.{po,pot}]
trim_trailing_whitespace = false

# -----------------------------------------------------------------------------
# Shell scripts
# -----------------------------------------------------------------------------
[*.sh]
indent_size = 2

# -----------------------------------------------------------------------------
# Makefiles (require tabs)
# -----------------------------------------------------------------------------
[Makefile]
indent_style = tab

# -----------------------------------------------------------------------------
# Dockerfile
# -----------------------------------------------------------------------------
[Dockerfile*]
indent_size = 4

# -----------------------------------------------------------------------------
# Docker Compose
# -----------------------------------------------------------------------------
[docker-compose*.yml]
indent_size = 2

# -----------------------------------------------------------------------------
# Configuration files
# -----------------------------------------------------------------------------
[*.{ini,cfg,conf}]
indent_size = 4

[odoo.conf]
indent_size = 4

# -----------------------------------------------------------------------------
# TOML (pyproject.toml)
# -----------------------------------------------------------------------------
[*.toml]
indent_size = 4
