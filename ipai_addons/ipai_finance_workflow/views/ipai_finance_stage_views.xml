<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ipai_finance_stage_tree" model="ir.ui.view">
        <field name="name">ipai.finance.stage.tree</field>
        <field name="model">ipai.finance.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="stage_type"/>
                <field name="is_default"/>
            </tree>
        </field>
    </record>
    
    <record id="view_ipai_finance_stage_form" model="ir.ui.view">
        <field name="name">ipai.finance.stage.form</field>
        <field name="model">ipai.finance.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="stage_type"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="is_default"/>
                            <field name="fold"/>
                            <field name="status_on_entry"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
