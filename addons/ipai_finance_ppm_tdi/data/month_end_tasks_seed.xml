<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Month-End Closing Tasks Seed Data -->
        <!-- 50+ tasks across 5 phases for TBWA Finance SSC -->

        <!-- Project: Month-End Closing -->
        <record id="project_month_end_closing" model="project.project">
            <field name="name">Month-End Closing 2025</field>
            <field name="active">True</field>
            <field name="privacy_visibility">employees</field>
        </record>

        <!-- PHASE 1: Pre-Closing (Days 1-2) -->
        <record id="task_phase1_bank_recon" model="project.task">
            <field name="name">Bank Reconciliation - All Accounts</field>
            <field name="project_id" ref="project_month_end_closing"/>
            <field name="user_ids" eval="[(4, ref('user_finance_supervisor_1'))]"/>
            <field name="description">Reconcile all bank accounts with bank statements</field>
            <field name="priority">1</field>
        </record>

        <record id="task_phase1_ar_review" model="project.task">
            <field name="name">Accounts Receivable Aging Review</field>
            <field name="project_id" ref="project_month_end_closing"/>
            <field name="user_ids" eval="[(4, ref('user_finance_supervisor_2'))]"/>
            <field name="description">Review AR aging report and identify overdue accounts</field>
            <field name="priority">1</field>
        </record>

        <record id="task_phase1_ap_review" model="project.task">
            <field name="name">Accounts Payable Aging Review</field>
            <field name="project_id" ref="project_month_end_closing"/>
            <field name="user_ids" eval="[(4, ref('user_finance_supervisor_3'))]"/>
            <field name="description">Review AP aging report and schedule payments</field>
            <field name="priority">1</field>
        </record>

        <record id="task_phase1_cash_count" model="project.task">
            <field name="name">Petty Cash Count and Reconciliation</field>
            <field name="project_id" ref="project_month_end_closing"/>
            <field name="user_ids" eval="[(4, ref('user_finance_assistant_1'))]"/>
            <field name="description">Physical count of petty cash and reconcile with records</field>
            <field name="priority">1</field>
        </record>

        <record id="task_phase1_revenue_cutoff" model="project.task">
            <field name="name">Revenue Recognition Cutoff Review</field>
            <field name="project_id" ref="project_month_end_closing"/>
            <field name="user_ids" eval="[(4, ref('user_senior_finance_manager_1'))]"/>
            <field name="description">Ensure revenue is recognized in correct period</field>
            <field name="priority">1</field>
        </record>

        <record id="task_phase1_expense_cutoff" model="project.task">
            <field name="name">Expense Accrual Cutoff Review</field>
            <field name="project_id" ref="project_month_end_closing"/>
            <field name="user_ids" eval="[(4, ref('user_senior_finance_manager_2'))]"/>
