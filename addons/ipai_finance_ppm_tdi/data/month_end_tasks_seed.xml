            <field name="priority">1</field>
        </record>

        <record id="task_phase1_fx_revaluation" model="project.task">
            <field name="name">Foreign Exchange Revaluation</field>
            <field name="project_id" ref="project_month_end_closing"/>
            <field name="user_ids" eval="[(4, ref('user_finance_supervisor_1'))]"/>
            <field name="description">Revalue foreign currency balances at month-end rates</field>
            <field name="priority">1</field>
        </record>

        <record id="task_phase1_prepaid_review" model="project.task">
            <field name="name">Prepaid Expenses and Deferred Revenue Review</field>
            <field name="project_id" ref="project_month_end_closing"/>
            <field name="user_ids" eval="[(4, ref('user_accounting_staff_1'))]"/>
