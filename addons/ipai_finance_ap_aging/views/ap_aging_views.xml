<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AP Aging Action Redirect to Heatmap -->
    <record id="action_ap_aging_heatmap" model="ir.actions.act_url">
        <field name="name">AP Aging Heatmap</field>
        <field name="url">/ipai/finance/ap_aging/heatmap</field>
        <field name="target">self</field>
    </record>

    <!-- Dashboard Widget (Optional - for future integration) -->
    <record id="view_ap_aging_kanban" model="ir.ui.view">
        <field name="name">ap.aging.dashboard.kanban</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="partner_id"/>
                <field name="date_maturity"/>
                <field name="amount_residual"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="partner_id"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="amount_residual" widget="monetary"/>
                                <br/>
                                <small>Due: <field name="date_maturity"/></small>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
