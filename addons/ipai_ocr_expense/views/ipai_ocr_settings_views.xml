<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Standalone InsightPulse OCR Settings -->

    <record id="view_ipai_ocr_config" model="ir.ui.view">
      <field name="name">InsightPulse OCR Settings</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="100"/>
      <field name="arch" type="xml">
        <form string="InsightPulse OCR Settings" class="oe_form_configuration">
          <header>
            <button string="Save" type="object" name="execute" class="oe_highlight"/>
            <button string="Cancel" type="object" name="cancel" class="oe_link"/>
          </header>
          <div class="o_setting_container">
            <div class="row mt16">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_left_pane">
                  <field name="ipai_ocr_enabled"/>
                </div>
                <div class="o_setting_right_pane">
                  <label for="ipai_ocr_enabled" string="Enable InsightPulse OCR"/>
                  <div class="text-muted">
                    Use InsightPulse OCR service for expense digitization (no Enterprise/IAP)
                  </div>
                  <div class="content-group" invisible="not ipai_ocr_enabled">
                    <div class="row mt16">
                      <label for="ipai_ocr_api_url" string="OCR API URL" class="col-lg-3"/>
                      <field name="ipai_ocr_api_url" placeholder="https://ocr.insightpulseai.net/api/expense/ocr" class="oe_inline"/>
                    </div>
                    <div class="row mt8">
                      <label for="ipai_ocr_api_key" string="API Key" class="col-lg-3"/>
                      <field name="ipai_ocr_api_key" password="True" placeholder="Your API key" class="oe_inline"/>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </field>
    </record>

    <!-- Menu Item -->
    <record id="action_ipai_ocr_config" model="ir.actions.act_window">
      <field name="name">InsightPulse OCR</field>
      <field name="res_model">res.config.settings</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_ipai_ocr_config"/>
      <field name="target">inline</field>
      <field name="context">{'module': 'ipai_ocr_expense'}</field>
    </record>

    <menuitem id="menu_ipai_ocr_config"
              name="InsightPulse OCR"
              parent="hr_expense.menu_hr_expense_configuration"
              action="action_ipai_ocr_config"
              sequence="99"/>

  </data>
</odoo>
