<odoo>
    <record id="view_task_tree_msp_style" model="ir.ui.view">
        <field name="name">project.task.tree.msp</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="wbs_code" optional="show" />
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="baseline_date_end" optional="hide"/>
                <field name="variance_duration" widget="badge"
                       decoration-danger="variance_duration &gt; 0"
                       decoration-success="variance_duration &lt;= 0"/>
            </xpath>
        </field>
    </record>

    <record id="view_task_form_msp_style" model="ir.ui.view">
        <field name="name">project.task.form.msp</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_set_baseline" type="object" string="Set Baseline" class="btn-primary"/>
            </header>
            <field name="name" position="before">
                <field name="wbs_code" readonly="1"/>
            </field>
            <group name="planning" position="after">
                <group string="Baseline" colspan="2">
                    <field name="baseline_date_start"/>
                    <field name="baseline_date_end"/>
                    <field name="variance_duration" readonly="1" widget="float_time"/>
                </group>
                <group string="Constraints" colspan="2">
                    <field name="constraint_type"/>
                    <field name="constraint_date" attrs="{'invisible': [('constraint_type', 'in', ['asap', 'alap'])]}"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
