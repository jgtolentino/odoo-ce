  <!-- AI Insights -->
  <record id="ai_insight_portfolio_risks" model="ppm.ai.insight">
    <field name="name">Portfolio Risks Summary</field>
    <field name="prompt">Summarize portfolio risks across all active projects.</field>
    <field name="insight_summary">3 projects are tracking over budget; 1 project is off-track on schedule due to API dependency.</field>
    <field name="severity">high</field>
  </record>

  <record id="ai_insight_high_roi" model="ppm.ai.insight">
    <field name="name">High ROI Low Risk</field>
    <field name="prompt">Which investments have highest ROI impact but low execution risk?</field>
    <field name="insight_summary">Digital Banking Revamp and Branch Experience Kiosk show ROI &gt; 15% with medium risk.</field>
    <field name="severity">medium</field>
  </record>

  <!-- Kanban Columns and Cards -->
  <record id="kanban_col_on_track" model="ppm.kanban.column">
    <field name="name">On Track</field>
    <field name="code">on_track</field>
    <field name="sequence">10</field>
  </record>

  <record id="kanban_col_at_risk" model="ppm.kanban.column">
    <field name="name">At Risk</field>
    <field name="code">at_risk</field>
    <field name="sequence">20</field>
  </record>

  <record id="kanban_col_off_track" model="ppm.kanban.column">
    <field name="name">Off Track</field>
    <field name="code">off_track</field>
    <field name="sequence">30</field>
  </record>

  <record id="kanban_card_digital_banking" model="ppm.kanban.card">
    <field name="name">Digital Banking Revamp</field>
    <field name="column_id" ref="kanban_col_on_track"/>
