  <!-- Dependency Nodes -->
  <record id="dep_mvp_api_layer" model="ppm.dependency.node">
    <field name="name">MVP API Layer</field>
    <field name="project_id" ref="proj_digital_banking_revamp"/>
    <field name="dependency_type">finish_to_start</field>
    <field name="critical_path">True</field>
    <field name="risk_score">0.75</field>
    <field name="assigned_resource">Senior Backend Dev</field>
  </record>

  <record id="dep_customer_pilot" model="ppm.dependency.node">
    <field name="name">Customer Pilot Rollout</field>
    <field name="project_id" ref="proj_digital_banking_revamp"/>
    <field name="dependency_type">start_to_start</field>
    <field name="critical_path">True</field>
    <field name="risk_score">0.6</field>
    <field name="assigned_resource">Project Manager</field>
  </record>

  <record id="dep_dw_upgrade" model="ppm.dependency.node">
    <field name="name">Data Warehouse Upgrade</field>
    <field name="project_id" ref="proj_analytics_self_service"/>
    <field name="dependency_type">finish_to_finish</field>
    <field name="critical_path">False</field>
    <field name="risk_score">0.4</field>
