    <field name="actual_cost">1030000</field>
    <field name="earned_value">910000</field>
    <field name="scenario">actuals</field>
  </record>

  <record id="fin_period_q1_opex" model="ppm.financial.period">
    <field name="name">2025 Q1 Opex</field>
    <field name="period_code">2025-Q1</field>
