<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="ipai_ppm_demo.PpmDashboardMain">
    <div class="o_ppm_dashboard o_view_nocontent" style="padding:24px; background-color:#ffffff;">

      <!-- SECTION 1: PROJECT PLANNING AND MANAGEMENT -->
      <section class="o_ppm_section" style="margin-bottom:32px;">
        <div style="text-align:center; margin-bottom:8px;">
          <div style="color:#D40000; font-weight:700; font-size:12px; letter-spacing:0.12em;">
            PROJECT PLANNING AND MANAGEMENT
          </div>
          <div style="font-size:20px; font-weight:700; color:#222; margin-top:4px;">
            Centralize and manage project portfolios to establish single source of truth
          </div>
        </div>
        <div style="margin:16px auto; max-width:960px; background:#F4F6F8; border-radius:12px; padding:16px; box-shadow:0 8px 24px rgba(0,0,0,0.06);">
          <div t-ref="planning" style="width:100%; height:280px;"></div>
        </div>
      </section>

      <!-- SECTION 2: PORTFOLIO PLANNING AND PRIORITIZATION -->
      <section class="o_ppm_section" style="margin-bottom:32px;">
        <div style="text-align:center; margin-bottom:8px;">
          <div style="color:#D40000; font-weight:700; font-size:12px; letter-spacing:0.12em;">
            PORTFOLIO PLANNING AND PRIORITIZATION
          </div>
          <div style="font-size:20px; font-weight:700; color:#222; margin-top:4px;">
            Integrate strategy, planning, and delivery
          </div>
        </div>
        <div style="margin:16px auto; max-width:960px; background:#F4F6F8; border-radius:12px; padding:16px; box-shadow:0 8px 24px rgba(0,0,0,0.06);">
          <div t-ref="portfolio" style="width:100%; height:280px;"></div>
        </div>
      </section>

      <!-- SECTION 3: SCENARIO ANALYSIS AND PROJECT PRIORITIZATION -->
      <section class="o_ppm_section" style="margin-bottom:32px;">
        <div style="text-align:center; margin-bottom:8px;">
          <div style="color:#D40000; font-weight:700; font-size:12px; letter-spacing:0.12em;">
            SCENARIO ANALYSIS AND PROJECT PRIORITIZATION
          </div>
          <div style="font-size:20px; font-weight:700; color:#222; margin-top:4px;">
            Discover trends and potential solutions with portfolio analysis
          </div>
        </div>
        <div style="margin:16px auto; max-width:960px; background:#F4F6F8; border-radius:12px; padding:16px; box-shadow:0 8px 24px rgba(0,0,0,0.06);">
          <div t-ref="scenario" style="width:100%; height:280px;"></div>
        </div>
      </section>

      <!-- SECTION 4: PROJECT INTAKE AND DEMAND MANAGEMENT -->
      <section class="o_ppm_section" style="margin-bottom:32px;">
        <div style="text-align:center; margin-bottom:8px;">
          <div style="color:#D40000; font-weight:700; font-size:12px; letter-spacing:0.12em;">
            PROJECT INTAKE AND DEMAND MANAGEMENT
          </div>
          <div style="font-size:20px; font-weight:700; color:#222; margin-top:4px;">
            Manage your demand pipeline against capacity
          </div>
        </div>
        <div style="margin:16px auto; max-width:960px; background:#F4F6F8; border-radius:12px; padding:16px; box-shadow:0 8px 24px rgba(0,0,0,0.06);">
          <div t-ref="intake" style="width:100%; height:280px;"></div>
        </div>
      </section>

      <!-- OPTIONAL: AI INSIGHTS LIST -->
      <section class="o_ppm_section" t-if="this.dashboardData and this.dashboardData.aiInsights">
        <div style="text-align:center; margin-bottom:8px;">
          <div style="color:#D40000; font-weight:700; font-size:12px; letter-spacing:0.12em;">
            INTELLIGENT PORTFOLIO INSIGHTS
          </div>
          <div style="font-size:20px; font-weight:700; color:#222; margin-top:4px;">
            AI summaries of portfolio risks and opportunities
          </div>
        </div>
        <div style="margin:16px auto; max-width:960px; display:grid; grid-template-columns:repeat(auto-fit,minmax(260px,1fr)); gap:16px;">
          <t t-foreach="this.dashboardData.aiInsights" t-as="insight" t-key="insight.id">
            <div style="background:#F4F6F8; border-radius:12px; padding:16px; box-shadow:0 4px 16px rgba(0,0,0,0.04); text-align:left;">
              <div style="font-weight:600; margin-bottom:4px;">
                <t t-esc="insight.name"/>
              </div>
              <div style="font-size:12px; color:#666; text-transform:uppercase; letter-spacing:0.08em; margin-bottom:8px;">
                <t t-esc="insight.severity"/>
              </div>
              <div style="font-size:13px; color:#444;">
                <t t-esc="insight.insight_summary"/>
              </div>
            </div>
          </t>
        </div>
      </section>

    </div>
  </t>

</templates>
