<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- DAT File Generator Wizard View -->
    <record id="view_bir_dat_file_wizard_form" model="ir.ui.view">
        <field name="name">ipai.bir.dat.wizard.form</field>
        <field name="model">ipai.bir.dat.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate BIR DAT File">
                <group invisible="state == 'done'">
                    <group>
                        <field name="report_type"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                </group>

                <group invisible="state == 'draft'">
                    <group string="Generation Results">
                        <field name="record_count"/>
                        <field name="total_amount"/>
                        <field name="total_tax"/>
                    </group>
                    <group string="Download File">
                        <field name="file_name" readonly="1"/>
                        <field name="file_data" filename="file_name"/>
                    </group>
                </group>

                <field name="state" invisible="1"/>
                <field name="currency_id" invisible="1"/>

                <footer>
                    <button name="generate_dat_file"
                            string="Generate DAT File"
                            type="object"
                            class="btn-primary"
                            invisible="state == 'done'"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Menu Action to Open Wizard -->
    <record id="action_bir_dat_file_wizard" model="ir.actions.act_window">
        <field name="name">Generate BIR DAT File</field>
        <field name="res_model">ipai.bir.dat.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item under Accounting > Reporting -->
    <menuitem id="menu_bir_reports"
              name="BIR Reports"
              parent="account.menu_finance_reports"
              sequence="100"/>

    <menuitem id="menu_bir_dat_generator"
              name="Generate DAT File"
              parent="menu_bir_reports"
              action="action_bir_dat_file_wizard"
              sequence="10"/>

    <!-- Add button to Vendor Bill form -->
    <record id="view_move_form_bir_2307" model="ir.ui.view">
        <field name="name">account.move.form.bir2307</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_generate_bir_2307"
                        string="Generate 2307"
                        type="object"
                        class="btn-secondary"
                        invisible="move_type != 'in_invoice' or state != 'posted'"/>
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="bir_2307_generated" invisible="move_type != 'in_invoice'"/>
                <field name="bir_2307_date" invisible="not bir_2307_generated"/>
                <field name="ewt_amount" invisible="move_type != 'in_invoice'"/>
            </xpath>
        </field>
    </record>
</odoo>
