        <!-- Parent Task: 1601-C Jan 2025 (Due: 2025-02-10) -->
        <record id="task_1601c_jan_2025_parent" model="project.task">
            <field name="name">BIR 1601-C - January 2025</field>
            <field name="project_id" ref="project_bir_compliance"/>
            <field name="date_deadline">2025-02-10</field>
            <field name="description">Monthly withholding tax return (all 8 agencies consolidated)</field>
        </record>

        <!-- Child Task 1: Data Collection (7 days before deadline) -->
        <record id="task_1601c_jan_2025_collect" model="project.task">
            <field name="name">1601-C Jan 2025: Collect Withholding Tax Data</field>
            <field name="project_id" ref="project_bir_compliance"/>
            <field name="parent_id" ref="task_1601c_jan_2025_parent"/>
            <field name="date_deadline">2025-02-03</field>
            <field name="description">Gather WHT data from all 8 agencies (RIM, CKVC, BOM, JPAL, JLI, JAP, LAS, RMQB)</field>
        </record>

        <!-- Child Task 2: Form Preparation (depends on Task 1, 4 days before) -->
        <record id="task_1601c_jan_2025_prepare" model="project.task">
            <field name="name">1601-C Jan 2025: Prepare Form and Schedules</field>
            <field name="project_id" ref="project_bir_compliance"/>
            <field name="parent_id" ref="task_1601c_jan_2025_parent"/>
            <field name="depend_on_ids" eval="[(6, 0, [ref('task_1601c_jan_2025_collect')])]"/>
            <field name="date_deadline">2025-02-06</field>
            <field name="description">Complete 1601-C form + Schedules (per ATC)</field>
        </record>

