<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Basic groups (optional; reuse base.group_user is fine) -->

        <record id="group_ipai_workspace_user" model="res.groups">
            <field name="name">Workspace User</field>
            <field name="category_id" ref="base.module_category_productivity"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_ipai_workspace_manager" model="res.groups">
            <field name="name">Workspace Manager</field>
            <field name="category_id" ref="base.module_category_productivity"/>
            <field name="implied_ids" eval="[(4, ref('group_ipai_workspace_user'))]"/>
        </record>
    </data>
</odoo>
