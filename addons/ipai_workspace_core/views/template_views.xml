<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- =====================================================================
         TEMPLATE VIEWS
         ===================================================================== -->

    <!-- Template: Tree View -->
    <record id="view_ipai_page_template_tree" model="ir.ui.view">
        <field name="name">ipai.page.template.tree</field>
        <field name="model">ipai.page.template</field>
        <field name="arch" type="xml">
            <tree string="Page Templates" decoration-info="is_global"
                  decoration-muted="not active">
                <field name="icon" string=" " class="text-center" width="40px"/>
                <field name="name"/>
                <field name="category" widget="badge"/>
                <field name="is_global" widget="boolean_toggle"/>
                <field name="workspace_id" optional="show"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Template: Form View -->
    <record id="view_ipai_page_template_form" model="ir.ui.view">
        <field name="name">ipai.page.template.form</field>
        <field name="model">ipai.page.template</field>
        <field name="arch" type="xml">
            <form string="Page Template">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_preview" type="object"
                                class="oe_stat_button" icon="fa-eye">
                            <span class="o_stat_text">Preview</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="icon" class="me-2" placeholder="ğŸ“‹"/>
                            <field name="name" placeholder="Template Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Settings">
                            <field name="category"/>
                            <field name="default_title"/>
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Scope">
                            <field name="is_global" widget="boolean_toggle"/>
                            <field name="workspace_id"
                                   invisible="is_global"
                                   required="not is_global"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"
                                   placeholder="Describe when to use this template..."/>
                        </page>
                        <page string="Content" name="content">
                            <field name="content_html" widget="html"
                                   placeholder="Template content..."/>
                        </page>
                        <page string="Blocks" name="blocks">
                            <field name="template_block_ids">
                                <tree string="Template Blocks" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="block_type"/>
                                    <field name="content"/>
                                    <field name="callout_icon"
                                           invisible="block_type != 'callout'"/>
                                    <field name="callout_color"
                                           invisible="block_type != 'callout'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="JSON Content" name="json" groups="base.group_no_one">
                            <field name="content_json"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Template: Kanban View -->
    <record id="view_ipai_page_template_kanban" model="ir.ui.view">
        <field name="name">ipai.page.template.kanban</field>
        <field name="model">ipai.page.template</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="category">
                <field name="name"/>
                <field name="icon"/>
                <field name="category"/>
                <field name="is_global"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <span t-esc="record.icon.value"/> <field name="name"/>
                                </strong>
                                <div class="text-muted small" t-if="record.description.raw_value">
                                    <field name="description"/>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge rounded-pill text-bg-info"
                                              t-if="record.is_global.raw_value">
                                            Global
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Template: Search View -->
    <record id="view_ipai_page_template_search" model="ir.ui.view">
        <field name="name">ipai.page.template.search</field>
        <field name="model">ipai.page.template</field>
        <field name="arch" type="xml">
            <search string="Search Templates">
                <field name="name"/>
                <field name="workspace_id"/>
                <separator/>
                <filter name="filter_global" string="Global Templates"
                        domain="[('is_global', '=', True)]"/>
                <filter name="filter_workspace" string="Workspace Templates"
                        domain="[('is_global', '=', False)]"/>
                <separator/>
                <filter name="filter_archived" string="Archived"
                        domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_category" string="Category"
                            context="{'group_by': 'category'}"/>
                    <filter name="group_workspace" string="Workspace"
                            context="{'group_by': 'workspace_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Template: Action -->
    <record id="action_ipai_page_template" model="ir.actions.act_window">
        <field name="name">Page Templates</field>
        <field name="res_model">ipai.page.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_ipai_page_template_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first template
            </p>
            <p>
                Templates provide reusable page structures for quick creation.
                Create global templates or workspace-specific ones.
            </p>
        </field>
    </record>

</odoo>
