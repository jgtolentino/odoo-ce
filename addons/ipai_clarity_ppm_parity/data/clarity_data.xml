            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="parent_id" ref="phase_erp_planning"/>
            <field name="milestone_id" ref="milestone_planning_gate"/>
            <field name="date_deadline">2025-01-20</field>
