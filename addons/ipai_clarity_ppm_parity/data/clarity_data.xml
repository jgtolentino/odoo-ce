        <record id="task_bir_1601c_prep" model="project.task">
            <field name="name">BIR 1601-C Preparation (Dec 2025)</field>
            <field name="project_id" ref="project_finance_ppm"/>
            <field name="parent_id" ref="phase_finance_closeout"/>
            <field name="milestone_id" ref="milestone_bir_1601c_dec"/>
