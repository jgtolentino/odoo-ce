<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ========================================== -->
        <!-- Project Portfolios (Categories) -->
        <!-- ========================================== -->

        <record id="portfolio_erp_implementation" model="project.category">
            <field name="name">ERP Implementation Program</field>
        </record>

        <record id="portfolio_finance_automation" model="project.category">
            <field name="name">Finance Automation Portfolio</field>
        </record>

        <record id="portfolio_infrastructure" model="project.category">
            <field name="name">IT Infrastructure Modernization</field>
        </record>

        <!-- ========================================== -->
        <!-- Clarity Projects with Baseline Dates -->
        <!-- ========================================== -->

        <record id="project_erp_implementation_q1" model="project.project">
            <field name="name">ERP Implementation Q1 2025</field>
            <field name="clarity_id">PRJ-2025-001</field>
            <field name="portfolio_id" ref="portfolio_erp_implementation"/>
            <field name="health_status">green</field>
            <field name="baseline_start">2025-01-06</field>
            <field name="baseline_finish">2025-03-31</field>
            <field name="date_start">2025-01-06</field>
            <field name="date">2025-03-31</field>
        </record>

        <record id="project_finance_ppm" model="project.project">
            <field name="name">Finance PPM &amp; BIR Compliance Q4 2025</field>
            <field name="clarity_id">PRJ-2025-002</field>
            <field name="portfolio_id" ref="portfolio_finance_automation"/>
            <field name="health_status">green</field>
            <field name="baseline_start">2025-10-01</field>
            <field name="baseline_finish">2025-12-31</field>
            <field name="date_start">2025-10-01</field>
            <field name="date">2025-12-31</field>
        </record>

        <!-- ========================================== -->
        <!-- Phases (Parent Tasks with is_phase=True) -->
        <!-- ========================================== -->

        <!-- ERP Implementation Project Phases -->

        <record id="phase_erp_planning" model="project.task">
            <field name="name">Planning Phase</field>
            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="is_phase" eval="True"/>
            <field name="phase_type">planning</field>
            <field name="date_deadline">2025-01-31</field>
            <field name="phase_baseline_start">2025-01-06</field>
            <field name="phase_baseline_finish">2025-01-31</field>
            <field name="has_gate" eval="True"/>
        </record>

        <record id="phase_erp_design" model="project.task">
            <field name="name">Design Phase</field>
            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="is_phase" eval="True"/>
            <field name="phase_type">design</field>
            <field name="date_deadline">2025-02-15</field>
            <field name="phase_baseline_start">2025-02-01</field>
            <field name="phase_baseline_finish">2025-02-15</field>
            <field name="has_gate" eval="True"/>
        </record>

        <record id="phase_erp_implementation" model="project.task">
            <field name="name">Implementation Phase</field>
            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="is_phase" eval="True"/>
            <field name="phase_type">implementation</field>
            <field name="date_deadline">2025-03-15</field>
            <field name="phase_baseline_start">2025-02-16</field>
            <field name="phase_baseline_finish">2025-03-15</field>
            <field name="has_gate" eval="True"/>
        </record>

        <record id="phase_erp_testing" model="project.task">
            <field name="name">Testing Phase</field>
            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="is_phase" eval="True"/>
            <field name="phase_type">testing</field>
            <field name="date_deadline">2025-03-25</field>
            <field name="phase_baseline_start">2025-03-16</field>
            <field name="phase_baseline_finish">2025-03-25</field>
        </record>

        <record id="phase_erp_deployment" model="project.task">
            <field name="name">Deployment Phase</field>
            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="is_phase" eval="True"/>
            <field name="phase_type">deployment</field>
            <field name="date_deadline">2025-03-28</field>
            <field name="phase_baseline_start">2025-03-26</field>
            <field name="phase_baseline_finish">2025-03-28</field>
        </record>

        <record id="phase_erp_closeout" model="project.task">
            <field name="name">Closeout Phase</field>
            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="is_phase" eval="True"/>
            <field name="phase_type">closeout</field>
            <field name="date_deadline">2025-03-31</field>
            <field name="phase_baseline_start">2025-03-29</field>
            <field name="phase_baseline_finish">2025-03-31</field>
        </record>

        <!-- Finance PPM Project Phases -->

        <record id="phase_finance_planning" model="project.task">
            <field name="name">Month-End Closing Planning</field>
            <field name="project_id" ref="project_finance_ppm"/>
            <field name="is_phase" eval="True"/>
            <field name="phase_type">planning</field>
            <field name="date_deadline">2025-10-15</field>
        </record>

        <record id="phase_finance_closeout" model="project.task">
            <field name="name">Tax Filing &amp; Compliance</field>
            <field name="project_id" ref="project_finance_ppm"/>
            <field name="is_phase" eval="True"/>
            <field name="phase_type">closeout</field>
            <field name="date_deadline">2025-12-31</field>
        </record>

        <!-- ========================================== -->
        <!-- Milestones with Clarity Properties -->
        <!-- ========================================== -->

        <record id="milestone_planning_gate" model="project.milestone">
            <field name="name">Planning Phase Gate</field>
            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="milestone_type">phase_gate</field>
            <field name="deadline">2025-01-31</field>
            <field name="baseline_deadline">2025-01-31</field>
            <field name="approval_required" eval="True"/>
            <field name="completion_criteria">All planning documents approved, requirements signed off, stakeholders aligned</field>
            <field name="deliverables">- Project Charter&#10;- Requirement Specification&#10;- Resource Plan&#10;- Budget Approval</field>
        </record>

        <record id="milestone_design_gate" model="project.milestone">
            <field name="name">Design Phase Gate</field>
            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="milestone_type">phase_gate</field>
            <field name="deadline">2025-02-15</field>
            <field name="baseline_deadline">2025-02-15</field>
            <field name="approval_required" eval="True"/>
            <field name="completion_criteria">All design documents reviewed and approved</field>
            <field name="deliverables">- System Architecture Document&#10;- Database Schema&#10;- UI/UX Mockups</field>
        </record>

        <record id="milestone_implementation_gate" model="project.milestone">
            <field name="name">Implementation Phase Gate</field>
            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="milestone_type">phase_gate</field>
            <field name="deadline">2025-03-15</field>
            <field name="baseline_deadline">2025-03-15</field>
            <field name="approval_required" eval="True"/>
            <field name="completion_criteria">All modules developed and code reviewed</field>
        </record>

        <record id="milestone_go_live" model="project.milestone">
            <field name="name">Production Go-Live</field>
            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="milestone_type">deliverable</field>
            <field name="deadline">2025-03-28</field>
            <field name="baseline_deadline">2025-03-28</field>
            <field name="approval_required" eval="True"/>
            <field name="risk_level">critical</field>
            <field name="completion_criteria">System deployed to production, users trained, cutover complete</field>
        </record>

        <!-- Finance PPM Milestones -->

        <record id="milestone_bir_1601c_dec" model="project.milestone">
            <field name="name">BIR 1601-C (Dec 2025)</field>
            <field name="project_id" ref="project_finance_ppm"/>
            <field name="milestone_type">approval</field>
            <field name="deadline">2026-01-10</field>
            <field name="approval_required" eval="True"/>
            <field name="completion_criteria">Monthly withholding tax filed and paid on time</field>
        </record>

        <record id="milestone_bir_2550q_q4" model="project.milestone">
            <field name="name">BIR 2550Q (Q4 2025)</field>
            <field name="project_id" ref="project_finance_ppm"/>
            <field name="milestone_type">approval</field>
            <field name="deadline">2026-02-28</field>
            <field name="approval_required" eval="True"/>
