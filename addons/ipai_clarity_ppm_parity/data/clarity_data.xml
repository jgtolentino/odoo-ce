            <field name="parent_id" ref="phase_erp_planning"/>
            <field name="milestone_id" ref="milestone_planning_gate"/>
            <field name="date_deadline">2025-01-15</field>
            <field name="planned_hours">40</field>
            <field name="planned_value">20000</field>
        </record>

        <record id="task_create_charter" model="project.task">
