            <field name="project_id" ref="project_erp_implementation_q1"/>
            <field name="parent_id" ref="phase_erp_design"/>
            <field name="milestone_id" ref="milestone_design_gate"/>
            <field name="date_deadline">2025-02-10</field>
            <field name="planned_hours">24</field>
