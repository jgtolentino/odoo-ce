<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_finance_person_tree" model="ir.ui.view">
        <field name="name">ipai.finance.person.tree</field>
        <field name="model">ipai.finance.person</field>
        <field name="arch" type="xml">
            <list string="Finance Directory">
                <field name="code"/>
                <field name="name"/>
                <field name="role"/>
                <field name="email"/>
                <field name="mobile" optional="show"/>
                <field name="phone" optional="hide"/>
                <field name="deadline_count" string="Deadlines"/>
            </list>
        </field>
    </record>

    <record id="view_finance_person_form" model="ir.ui.view">
        <field name="name">ipai.finance.person.form</field>
        <field name="model">ipai.finance.person</field>
        <field name="arch" type="xml">
            <form string="Finance Person">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_deadlines" icon="fa-calendar">
                            <field name="deadline_count" widget="statinfo" string="Deadlines"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="code" placeholder="Initials (e.g. CKVC)"/></h1>
                        <h2><field name="name" placeholder="Full Name"/></h2>
                    </div>
                    <group>
                        <group string="Role &amp; Account">
                            <field name="role"/>
                            <field name="user_id"/>
                            <field name="active"/>
                        </group>
                        <group string="Contact (for Alerts)">
                            <field name="email" widget="email"/>
                            <field name="mobile" widget="phone"/>
                            <field name="phone" widget="phone"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_finance_person_kanban" model="ir.ui.view">
        <field name="name">ipai.finance.person.kanban</field>
        <field name="model">ipai.finance.person</field>
        <field name="arch" type="xml">
            <kanban default_group_by="role">
                <field name="code"/>
                <field name="name"/>
                <field name="role"/>
                <field name="email"/>
                <field name="mobile"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <strong><field name="code"/></strong> - <field name="name"/>
                            <div class="text-muted small">
                                <field name="role"/>
                            </div>
                            <div class="mt-1" t-if="record.mobile.value">
                                üì± <field name="mobile"/>
                            </div>
                            <div t-if="record.email.value">
                                ‚úâÔ∏è <field name="email"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_finance_person_search" model="ir.ui.view">
        <field name="name">ipai.finance.person.search</field>
        <field name="model">ipai.finance.person</field>
        <field name="arch" type="xml">
            <search string="Search Finance Directory">
                <field name="code"/>
                <field name="name"/>
                <field name="email"/>
                <filter string="Staff" name="staff" domain="[('role', '=', 'staff')]"/>
                <filter string="Supervisors" name="supervisors" domain="[('role', 'in', ['supervisor', 'senior_supervisor'])]"/>
                <filter string="Management" name="management" domain="[('role', 'in', ['manager', 'director'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Role" name="group_role" context="{'group_by': 'role'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_finance_person" model="ir.actions.act_window">
        <field name="name">Directory</field>
        <field name="res_model">ipai.finance.person</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first Finance team member
            </p>
            <p>
                The directory stores contact information for deadline alerts
                and @mention notifications.
            </p>
        </field>
    </record>
</odoo>
