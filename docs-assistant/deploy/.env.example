# Docs Assistant Environment Configuration
# Copy this file to .env and fill in your values

# Supabase Database Configuration
SUPABASE_HOST=db.your-supabase-project.supabase.co
SUPABASE_PORT=5432
SUPABASE_DB=postgres
SUPABASE_USER=postgres
SUPABASE_PASSWORD=your-supabase-password

# Alternative: Use DATABASE_URL instead of individual variables
# DATABASE_URL=postgresql://user:password@host:port/database

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Redis for caching (if using Redis service)
REDIS_URL=redis://redis:6379

# Optional: Custom API URL (for widget configuration)
DOCS_ASSISTANT_API_URL=http://localhost:8000

# Optional: Debug mode
DEBUG=false
