# =============================================================================
# ODOO CE 18.0 - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and customize values for your environment.
# NEVER commit the actual .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database (Odoo's dedicated DB container)
# -----------------------------------------------------------------------------
DB_HOST=db
DB_PORT=5432
DB_USER=odoo
DB_PASSWORD=odoo_strong_password_change_me
DB_NAME=odooprod
DB_MAXCONN=64

# For external connections (pgAdmin, DBeaver, etc.)
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo_strong_password_change_me
POSTGRES_DB=odooprod

# -----------------------------------------------------------------------------
# Odoo Server Configuration
# -----------------------------------------------------------------------------
ODOO_RC=/etc/odoo/odoo.conf
ADMIN_PASSWD=super_master_password_change_me

# Server performance tuning (adjust based on server resources)
# Formula: WORKERS = (2 * CPU_CORES) + 1
WORKERS=4
MAX_CRON_THREADS=2
LIMIT_MEMORY_HARD=2684354560
LIMIT_MEMORY_SOFT=2147483648
LIMIT_TIME_CPU=600
LIMIT_TIME_REAL=1200

# Development mode (disable in production!)
# Options: reload,xml,qweb,werkzeug
DEV_MODE=

# -----------------------------------------------------------------------------
# Docker Image Configuration
# -----------------------------------------------------------------------------
APP_IMAGE=ghcr.io/jgtolentino/odoo-ce
APP_IMAGE_VERSION=v0.9.1

# Addons paths (inside container)
ADDONS_PATH=/mnt/extra-addons,/opt/odoo/custom-addons

# -----------------------------------------------------------------------------
# Network / Proxy Configuration
# -----------------------------------------------------------------------------
ODOO_PORT=8069
ODOO_LONGPOLLING_PORT=8072
PROXY_MODE=True

# Domain configuration (for reverse proxy / HTTPS)
DOMAIN=odoo.example.com
SSL_ENABLED=false

# -----------------------------------------------------------------------------
# Session & Cache (Redis - optional)
# -----------------------------------------------------------------------------
# SESSION_STORE=redis
# REDIS_HOST=redis
# REDIS_PORT=6379

# -----------------------------------------------------------------------------
# External Integrations - Supabase (Canonical Project)
# -----------------------------------------------------------------------------
# Project Reference: spdtwktxdalcfigzeqrz
SUPABASE_PROJECT_REF=spdtwktxdalcfigzeqrz
SUPABASE_URL=https://spdtwktxdalcfigzeqrz.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://spdtwktxdalcfigzeqrz.supabase.co

# Authentication Keys (replace with actual keys from Supabase dashboard)
SUPABASE_ANON_KEY=your_anon_key_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# Supabase PostgreSQL (for external integrations, NOT for Odoo's main DB)
SUPABASE_POSTGRES_URL=postgres://postgres.spdtwktxdalcfigzeqrz:PASSWORD@aws-1-us-east-1.pooler.supabase.com:6543/postgres

# -----------------------------------------------------------------------------
# n8n Automation Platform
# -----------------------------------------------------------------------------
N8N_HOST=n8n
N8N_PORT=5678
N8N_WEBHOOK_URL=http://n8n:5678/webhook

# -----------------------------------------------------------------------------
# Mattermost Integration
# -----------------------------------------------------------------------------
MATTERMOST_URL=https://mattermost.example.com
MATTERMOST_WEBHOOK_URL=
MATTERMOST_BOT_TOKEN=

# -----------------------------------------------------------------------------
# CI/CD & GitHub Integration
# -----------------------------------------------------------------------------
# GITHUB_ACCESS_TOKEN=
# GITHUB_REPO=jgtolentino/odoo-ce
# DOCKERHUB_USERNAME=

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_HANDLER=:INFO
SYSLOG=false

# Sentry (optional error tracking)
# SENTRY_DSN=

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

